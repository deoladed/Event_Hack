<% provide(:title, 'Les events') %>

<!-- -------------------------PROFILE GAUCHE------------------------------- -->
  
<div class="container text-center">    

    <div class="col-sm-10">
<!-- -------------------------FIN PROFILE ------------------------------- -->
    
      <div class="row">
        <div class="col-sm-12">
          <div class="panel panel-default">
            <div class="panel-body">
              <h2 class="h1 mb-3 font-weight-normal text-center">EVENTS IN LYON !</h2>  
            </div>
          </div>
        </div>
      </div>
<!-- ---------------------------------------- FIN STATUS ----------------------- -->
      <div class="row">
<!-- ---------------------------------------- AVATAR + NOM ----------------------- -->
		<% @events.all.each do |event|  %>
	        <div class="col-sm-3">
	          <div class="well">
	           <p>In <%= event.location %></p>
	           <%= image_tag("bird.jpg", size: "100x100", alt: "Avatar", class: "img-circle") %>
	           <footer class="blockquote-footer"><%= event.start_date.to_s[0..-13] %><cite title="Source Title">- <%= event.duration %> minutes</cite></footer>
	          </div>
	        </div>
<!-- ------------------------------- FIN AVATaR DEBUT DESCRIPTION ----------------------- -->
	        <div class="col-sm-9">
	          <div class="well">
	            <h2 class="h4 mb-3 font-weight-normal text-center"><%= event.title %></h2><br>
	            <div class="dropdown-divider"></div>
	            <hr class="my-0">
	            <p><%= event.description %></p><br>
	           	<div class="dropdown-divider"></div>
	            <hr class="my-0">
				<%= link_to "Plus d'infos", event_path(event.id), class:"btn btn-primary" %>
	          </div>
	        </div>
<!-- ---------------------------------------- FIN DESCRIPTION ----------------------- -->
		<% end %>
      </div>
    </div>
<!-- --------------------------- EVENT ------------------------------------ -->
	<div class="col-sm-2 well">
	      <div class="thumbnail">
	        <p>Upcoming Events:</p>
	        <%= image_tag("img.png", size: "400x300", alt: "Lyon", class: "img-circle") %>
	        <p><strong><%= @events.last.location %></strong></p>
	        <p><%= @events.last.start_date.to_s[0..-13] %></p>
	        <%= link_to "Infos", event_path(@events.last.id), class:"btn btn-primary" %>
	      </div>      

	      	<% if user_signed_in? && !current_user.attandances.blank? %>
	        			<p>Mes resas :</p>
	      		<% current_user.attandances.each do |resa| %>
	      			<%= link_to event_path(resa.event.id) do %>
	      				<div class="well card-link">
	        				<p><%= resa.event.title %></p>
	      				</div>
	      			<% end %>
	      		<% end %>	      		
	      	<% end %>
		
			<% if user_signed_in? && !current_user.attandances.blank? %>
	        			<p>Mes event :</p>
	      		<% current_user.events.each do |event| %>
	      			<%= link_to event_path(event.id) do %>
	      				<div class="well card-link">
	        				<p><%= event.title %></p>
	      				</div>
	      			<% end %>
	      		<% end %>	      		
	      	<% end %>
	</div>
</div>