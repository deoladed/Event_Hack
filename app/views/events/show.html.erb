                <% end %>					
				</div>
				<div class="col-sm-4">
			            <div><h2 class="h4 mb-3 font-weight-normal text-center"><%= @event.date %> a <%= @event.hour %></h2></div>
			            <hr class="my-0">
			            <hr class="my-0"><br>
			    <p>Duree : <%= @event.duration %> minutes</p>
			    <hr class="my-0">
			    <hr class="my-0"><br>
			    <p>Tarif : <%= @event.price %>€</p>
			    <hr class="my-0">
			    <hr class="my-0"><br>
			    <p>Organise par : <%= @event.admin.first_name %><br>
