                                                  <th>Delete</th>
                                                  <th>Validate</th>

                                             </tr>
                                        </thead>
                                        <tbody>
                                        <% @events.each do |event| %>
                                             <% if event.validated.nil? %>        
                                               <tr>
                                                  <td><%= event.id %></td>
                                                  <td><%= event.title %></td>
                                                  <td><%= event.date %></td>
                                                  <td><%= event.price %></td>
